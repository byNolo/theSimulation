# Example environment configuration
# Copy this to .env and fill in your actual values

# KeyN OAuth configuration (register your app at https://auth-keyn.bynolo.ca)
KEYN_AUTH_SERVER_URL=https://auth-keyn.bynolo.ca
KEYN_CLIENT_ID=your_client_id_here
KEYN_CLIENT_SECRET=your_client_secret_here
# Development
# KEYN_REDIRECT_URI=https://localhost:5160/auth/callback
# Production
KEYN_REDIRECT_URI=https://thesim.bynolo.ca/auth/callback
KEYN_SCOPES=id,username,email,full_name,display_name,created_at,is_verified

# Flask secret & admin token (generate secure random strings)
SECRET_KEY=generate_a_secure_random_key_here
ADMIN_TOKEN=generate_a_secure_admin_token_here

# Nolofication integration (optional - for vote reminders and notifications)
# Register at https://nolofication.bynolo.ca to get your API key
NOLOFICATION_URL=https://nolofication.bynolo.ca
NOLOFICATION_SITE_ID=thesimulation
NOLOFICATION_API_KEY=your_nolofication_api_key_here

# Server ports
PORT=5060
FRONTEND_PORT=5160
# Development
# CLIENT_URL=https://localhost:5160
# Production
CLIENT_URL=https://thesim.bynolo.ca
